<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mew2795.birdsoftheworld.Main4Activity">

    <TextView
        android:id="@+id/birdText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:text="Budgerigars are a species of parakeet native to Australia they are in the Australian genus Melopsittacus, they are also the only species in this genus \n\n The species was first recorded in 1805, and today is the third most popular pet in the world, after the domesticated dog and cat."
        android:textAppearance="?android:attr/textAppearanceLarge" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back"
        android:id="@+id/back1"
        android:layout_marginTop="70dp"
        android:onClick="back1"
        android:layout_below="@+id/birdText"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
